{
  "name": "solid-auth-client",
  "version": "0.3.4",
  "description": "Opaquely authenticates solid clients",
  "main": "lib/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "repository": "git@github.com:solid/solid-auth-client.git",
  "author": "Daniel Friedman <dfriedman58@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config=./webpack.config.js",
    "jest": "jest src --coverage",
    "lint": "standard 'src/**/*.js'",
    "pretest": "flow && yarn lint",
    "test": "yarn jest",
    "test:dev": "yarn jest -- --watch",
    "test:debug": "node --debug-brk ./node_modules/.bin/jest --runInBand src",
    "coverage:report": "cat ./coverage/lcov.info | coveralls",
    "build": "yarn build:lib && yarn build:dist && yarn docs",
    "build:lib": "rm -rf lib && babel --ignore '**.spec.js' src -d lib",
    "build:dist": "webpack -p",
    "docs": "[ $(ls -l ./docs | wc -l) -gt 0 ] && rm -r ./docs/*; mkdir -p ./docs && cp ./dist/demo.html ./docs/index.html && cp ./dist/demo.bundle.js ./docs/demo.bundle.js && cp ./dist/demo.bundle.js.map ./docs/demo.bundle.js.map",
    "preversion": "yarn test",
    "postversion": "git push --follow-tags",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "auth-header": "^0.3.1",
    "isomorphic-fetch": "^2.2.1",
    "oidc-rp": "dan-f/oidc-rp#52ed16b3ea26b03406070099cc06b93d3f324682",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "bootstrap": "^4.0.0-alpha.6",
    "clean-webpack-plugin": "^0.1.16",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.4",
    "eslint-plugin-flowtype": "^2.34.0",
    "flow-bin": "^0.47.0",
    "html-webpack-inline-source-plugin": "^0.0.9",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^20.0.4",
    "jsonwebtoken": "^7.4.1",
    "nock": "^9.0.13",
    "prettier": "^1.5.3",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "rsa-pem-to-jwk": "^1.1.3",
    "standard": "^10.0.2",
    "style-loader": "^0.18.2",
    "url-search-params": "^0.9.0",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1"
  },
  "jest": {
    "testURL": "https://app.biz/page?foo=bar#more-params"
  },
  "standard": {
    "plugins": [
      "flowtype"
    ],
    "parser": "babel-eslint"
  }
}
